<div class="container">
    <div class="h-100 row align-items-center">
        <div class="col">
            {{#if user}}
            <div class="container p-4">
                {{#each publicaciones}}
                <div class="row">
                    <div class="col-md-12 my-2">
                        <div class="card">
                            <div class="card-header">
                                <ul class="nav nav-pills card-header-pills">
                                    <li class="nav-item">
                                        <p>{{nombre}}</p>
                                    </li>
                                    <li class="nav-item ml-auto">
                                        <button data-toggle="modal" data-target="#loginModal" type="button"
                                            class="btn btn-warning btn-sm">Reportar</button>
                                    </li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <h4 class="text-centered">
                                    {{descripcion}}
                                </h4>
                            </div>
                            <div class="card-footer text-right">
                                <ul class="nav nav-pills card-header-pills">
                                    <li class="nav-item">
                                        <button type="button" class="btn btn-outline-info btn-sm"
                                            onclick="focusComentar();">Comentar</button>
                                    </li>
                                    <li class="nav-item ml-auto">
                                        <p>{{timeago fecha}}</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade " role="dialog" id="loginModal">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h3 class="modal-title" name="idPub">Reportar Publicación.&nbsp;</h3>
                                    <button class="close" data-dismiss="modal">&times;</button>
                                </div>
                                <form action="/perfil/denunciar" method="POST" onsubmit="return validarDenuncia();"
                                    name="formDenuncia">
                                    <div class="modal-body">
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <label for="idPub">Publicación N°</label>
                                                <input class="form-control" type="text" value={{idPublicaciones}}
                                                    name="idPub" readonly>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="denuncia">Por favor, resuma en 150 caracteres.</label>
                                            <textarea class="form-control" rows="4" name="denuncia" id="idDenuncia"
                                                style="resize: none;"></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-success" id="btnEnviar">Enviar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 my-2">
                        <form action="" method="POST">
                            <div class="form-row align-items-center">
                                <div class="col-sm-11 my-1">
                                    <input type="text" class="form-control" id="idComentario" name="comentario"
                                        placeholder="Escribe un comentario...">
                                </div>
                                <div class="col-auto my-1">
                                    <button type="submit" class="btn btn-primary"><svg width="3em" height="1em"
                                            viewBox="0 0 16 16" class="bi bi-arrow-right-circle" fill="currentColor"
                                            xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd"
                                                d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                            <path fill-rule="evenodd"
                                                d="M7.646 11.354a.5.5 0 0 1 0-.708L10.293 8 7.646 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0z" />
                                            <path fill-rule="evenodd"
                                                d="M4.5 8a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5z" />
                                        </svg>
                                        </svg></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                {{else}}
                <div class="col-md-4 mx-auto">
                    <div class="card card-body text-center">
                        <p>Aún no hay publicaciones para mostrar.</p>
                        <a href="#" class="btn btn-primary">Buscar contactos...</a>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <div class="card text-center">
                <h1>Debe ingresar al portal...</h1>
            </div>
            {{/if}}
        </div>
    </div>
</div>
</div>