{{#if user}}
<div class="container-fluid">
    <div class="row">
        <div class="col-8 col-sm-10">
            {{> menu}}
            <div class="container mt-5">
                {{#each publicaciones}}
                <div class="card border-info">
                    <div class="card-header">
                        <p><small>{{timeago fecha}}</small></p>
                    </div>
                    <div class="card-body">
                        <div class="text-break font-weight-bold">
                            {{descripcion}}
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <ul class="nav nav-pills card-header-pills">
                            <li class="nav-item">
                                <a href="/perfil/comentario/{{idPublicaciones}}" class="btn btn-outline-info btn-sm"
                                    role="button" aria-pressed="true">Comentarios </a>
                            </li>
                            <li class="nav-item ml-auto">
                                <a href="/perfil/delete/{{idPublicaciones}}" class="btn btn-danger btn-sm">Eliminar</a>
                                <a href="/perfil/pedit/{{idPublicaciones}}" class="btn btn-success btn-sm">Modificar</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto mt-5">
                <div class="card card-body text-center border-info">
                    <p class="h6">AÃºn no tienes publicaciones</p>
                    <a href="/perfil/publicar" class="btn btn-primary">Empezar a publicar</a>
                </div>
            </div>
            {{/each}}
        </div>
        {{>publicidad}}
    </div>
</div>
{{else}}
Debe registrarse...
{{/if}}