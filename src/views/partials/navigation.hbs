<div class="modal fade " role="dialog" id="loginModal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Login</h3>
        <button class="close" data-dismiss="modal">&times;</button>
      </div>
      <form action="/signin" method="POST" name="formlogin"
        class="needs-validation" novalidate>
        <div class="modal-body">
          <div class="form-group">
            <input type="text" name="rutlogin" class="form-control" placeholder="Rut" id="rutlogin" required>
          </div>
          <div class="form-group">
            <input type="password" name="passwordlogin" class="form-control" placeholder="Contrase침a"
              id="passwordlogin" required>
          </div>
        </div>
        <div class="modal-footer">
          <a href="/signup">Nueva Cuenta</a>
          <button type="submit" class="btn btn-success" id="btnIngresar">Ingresar</button>
        </div>
      </form>
    </div>
  </div>
</div>
