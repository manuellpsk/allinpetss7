<div class="container my-2">
    <div class="card">
        <div class="card-header">
            <h3>Registro</h3>
        </div>
        <div class="card-body">
            <form action="/signup" method="POST" onsubmit="return validarRutRegistro();" name="formsignup">
                <div class="form-group">
                    <label for="idrut">Rut</label>
                    <input type="text" class="form-control" id="rut" aria-describedby="rutHelp"
                        placeholder="Rut" name='rutRegistro' autofocus>
                    <small id="rutHelp" class="form-text text-muted">Por ejemplo. 12345678-9</small>
                </div>
                <div class="form-group">
                    <label for="idNombre">Nombre</label>
                    <input type="text" class="form-control" id="nombre" placeholder="Nombre" name="nombre">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                        placeholder="Enter email" name="email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Password" name="passwordRegistro">
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Aca deben ir las politcas...</label>
                </div>
                <button type="submit" class="btn btn-primary my-4" id="btnRegistrar">Registrar</button>
            </form>
        </div>
    </div>
</div>